<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidDicodingProject" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="titleTextColor">@color/green_dark</item>
    </style>

    <style name="TitleContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleContent.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

    <style name="Theme.AndroidDicodingProject" parent="Base.Theme.AndroidDicodingProject" />
</resources>